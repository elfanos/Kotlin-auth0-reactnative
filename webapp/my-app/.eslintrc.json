{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "forOf": true,
        "generators": true,
        "modules": true,
        "spread": true,
        "templateStrings": true,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": [1],
        "no-use-before-define": [2, "nofunc"],
        "no-console": [1],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}